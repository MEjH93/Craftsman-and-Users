<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".MajstorPocetnaActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context=".MajstorPocetnaActivity">


        <TableRow>
            <RadioGroup             android:id="@+id/Grupica"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_marginLeft="10dp">

                <RadioButton
                        android:id="@+id/IdR"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Id Rastuce"
                        android:checked="true" android:layout_marginLeft="20dp"/>

                <RadioButton
                        android:id="@+id/IdO"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Id Opadajuce" android:layout_marginLeft="20dp"/>

            </RadioGroup>
        </TableRow>

        <TableRow>
            <Button
                    android:text="Zahtevi" android:layout_width="150dp" android:layout_height="50dp"
                    android:id="@+id/Zahtevi"
                    android:layout_marginLeft="10dp" android:layout_marginBottom="20dp"
            />

        </TableRow>

        <TableRow>
            <Button
                    android:text="Licni podaci" android:layout_width="150dp" android:layout_height="50dp"
                    android:id="@+id/Podaci"
                    android:layout_marginLeft="10dp" android:layout_marginBottom="20dp"
            />
        </TableRow>

        <TableRow>
            <Button
                    android:text="Moji kupci" android:layout_width="150dp" android:layout_height="50dp"
                    android:id="@+id/MojiKupci"
                    android:layout_marginLeft="10dp" android:layout_marginBottom="20dp"
            />
        </TableRow>

        <TableRow>
            <Button
                    android:text="Odjavi me" android:layout_width="150dp" android:layout_height="50dp"
                    android:id="@+id/Odjava"
                    android:layout_marginLeft="10dp" android:layout_marginBottom="20dp"
            />
        </TableRow>

    </TableLayout>

</ScrollView>