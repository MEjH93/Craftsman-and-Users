<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Prijavi se" android:layout_width="120dp" android:layout_height="50dp"
            android:id="@+id/PrijaviSe" android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/Lozinka" android:layout_marginBottom="90dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/RegistrujSe"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Registruj se" android:layout_width="120dp" android:layout_height="50dp"
            android:id="@+id/RegistrujSe"
            app:layout_constraintTop_toBottomOf="@+id/PrijaviSe" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/Pretrazuj"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Pretrazuj" android:layout_width="120dp" android:layout_height="50dp"
            android:id="@+id/Pretrazuj"
            app:layout_constraintTop_toBottomOf="@+id/RegistrujSe" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
            android:id="@+id/KorisnickoIme"
            android:layout_marginTop="30dp" android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Lozinka" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Korisnicko ime"
            app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
    />
    <EditText
            android:layout_width="150dp" android:layout_height="50dp" android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Lozinka"
            app:layout_constraintTop_toBottomOf="@+id/KorisnickoIme" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/PrijaviSe"
            app:layout_constraintStart_toStartOf="parent" android:hint="Lozinka"
    />

</android.support.constraint.ConstraintLayout>