<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".RegistrationActivity">

    <TableRow>
        <EditText
                android:layout_marginTop="20dp"
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/KorisnickoImeR"
                android:hint="Korisnicko ime" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
        />
        <EditText
                android:layout_marginTop="20dp"
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/LozinkaR"
                android:hint="Lozinka" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="textPassword"
        />
    </TableRow>

    <TableRow>
        <EditText
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/ImeR"
                android:hint="Ime" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
        />
        <EditText
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/PrezimeR"
                android:hint="Prezime" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
        />
    </TableRow>

    <TableRow>
        <EditText
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/AdresaR"
                android:hint="Adresa" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
        />
        <EditText
                android:layout_width="150dp" android:layout_height="50dp" android:ems="10"
                android:id="@+id/BrojR"
                android:hint="Broj" android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="spread_inside" android:inputType="text"
        />
    </TableRow>

    <TableRow>
        <RadioGroup             android:id="@+id/Grupa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="20dp">

            <RadioButton
                    android:id="@+id/RBK"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Kupac"
                    android:checked="true" android:layout_marginLeft="20dp"/>

            <RadioButton
                    android:id="@+id/RBM"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Majstor" android:layout_marginLeft="20dp"/>

        </RadioGroup>
    </TableRow>

    <TableRow>
        <Button
                android:text="Registruj se" android:layout_width="120dp" android:layout_height="50dp"
                android:id="@+id/RegistrujSeR" android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                />
    </TableRow>

    <TableRow>
        <Button
                android:text="Nazad" android:layout_width="120dp" android:layout_height="50dp"
                android:id="@+id/NazadR"
                android:layout_marginLeft="20dp" android:layout_marginBottom="20dp"
        />
    </TableRow>


</TableLayout>